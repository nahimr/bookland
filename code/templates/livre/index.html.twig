{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <div class="livre-filter accordion mb-2" data-controller="livre" id="filter-accordion">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button"  data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Filter
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse hide"
                 aria-labelledby="headingOne" data-bs-parent="#filter-accordion">
                <div class="accordion-body">
                    <div id="filter-collapse" class="card-body container">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                            <button class="btn btn-primary">{{ button_label|default('Filter') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive table-bordered">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ISBN</th>
                    <th>Titre</th>
                    <th>Nombre de pages</th>
                    <th>Date de parution</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for livre in livres %}
                <tr>
                    <td><strong>{{ livre.id }}</strong></td>
                    <td>{{ livre.isbn }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.nbpages }}</td>
                    <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
                    <td>{{ livre.note }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('livre_show', {'id': livre.id}) }}">Voir</a>
                        <a class="btn btn-secondary" href="{{ path('livre_edit', {'id': livre.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Pas de Livre trouver</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('livre_new') }}">Ajouter un nouveau Livre</a>
{% endblock %}
