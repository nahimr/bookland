{% extends 'sub_base.html.twig' %}

{% block title %}{{ livre.titre }}{% endblock %}
{% block subtitle %}{{ livre.titre }}{% endblock %}
{% block subnav %}
    <div class="btn-group me-2">
        <a class="btn btn-primary" href="{{ path('livre_index') }}">Retour</a>
        <a class="btn btn-primary" href="{{ path('livre_edit', {'id': livre.id}) }}">Modifier</a>
    </div>
    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date de parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|format_datetime('full', 'none', locale='fr')
                    : 'Pas de date' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ livre.note }} / 20</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                <td>
                    <ul class="list-group">
                        {% for auteur in livre.auteurs %}
                            <li class="list-group-item">
                                <a class="link-primary" href="{{ path('auteur_show', {'id': auteur.id}) }}">{{ auteur }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Genres</th>
                <td>
                    <ul class="list-group">
                        {% for genre in livre.genres %}
                            <li class="list-group-item">
                                <a class="link-primary" href="{{ path('genre_show', {'id': genre.id}) }}">{{ genre }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
