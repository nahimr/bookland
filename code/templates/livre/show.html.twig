{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date de parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ livre.note }}</td>
            </tr>

            <tr>
                <th>Auteurs</th>
                <td>
                    <ul class="list-group">
                        {% for auteur in livre.auteurs %}
                            <li class="list-group-item">
                                <a href="{{ path('auteur_show', {'id': auteur.id}) }}">{{ auteur }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}">back to list</a>

    <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
