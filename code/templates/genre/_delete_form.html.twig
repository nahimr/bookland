<form data-controller="auteur" method="post" action="{{ path('genre_delete', {'id': genre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre.id) }}">

        {% if genre.livres is not empty %}
            <button class="btn btn-danger" type="button" disabled>
        {% else %}
            <button class="btn btn-danger" type="button">
        {% endif %}
            Supprimer
        </button>
</form>