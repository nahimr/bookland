{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
{% set auteurs = [] %}
{% for livre in genre.livres %}
          {% for auteur in livre.auteurs %}
              {% if auteur not in auteurs %}
                  {% set auteurs = auteurs|merge([auteur]) %}
              {% endif %}
         {% endfor %}
{% endfor %}
    <h1>Genre</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
            <tr>
                <th>Auteurs</th>
                <td>
                    <ul class="list-group">
                        {% for auteur in auteurs %}
                            <li class="list-group-item">
                                <a href="{{ path('auteur_show', {'id': auteur.id}) }}">{{ auteur.nomPrenom }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('genre_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('genre_edit', {'id': genre.id}) }}">edit</a>

    {{ include('genre/_delete_form.html.twig') }}
{% endblock %}
