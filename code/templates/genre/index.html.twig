{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Genres</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a class="btn btn-primary" href="{{ path('genre_new') }}">Ajouter un nouveau genre</a>
            </div>
        </div>
    </div>

    <div class="table-responsive table-bordered">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for genre in genres %}
                <tr>
                    <td><strong>{{ genre.id }}</strong></td>
                    <td>{{ genre.nom }}</td>
                    <td>
                        <div class="btn-group me-2">
                            <a class="btn btn-primary" href="{{ path('genre_show', {'id': genre.id}) }}">Voir</a>
                            <a class="btn btn-secondary" href="{{ path('genre_edit', {'id': genre.id}) }}">Editer</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de genre trouver</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
