{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur Liste</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Prénom</th>
                <th>Sexe</th>
                <th>Date de naissance</th>
                <th>Nationalité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nomPrenom }}</td>
                <td>{{ auteur.sexe }}</td>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('auteur_show', {'id': auteur.id}) }}">Voir</a>
                    <a class="btn btn-secondary" href="{{ path('auteur_edit', {'id': auteur.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'auteurs trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('auteur_new') }}">Créer nouvel Auteur</a>
{% endblock %}
