{% extends 'sub_base.html.twig' %}

{% block title %}Editer Auteur{% endblock %}
{% block subtitle %}{{ auteur.nomPrenom }}{% endblock %}
{% block subnav %}
    <div class="btn-group me-2">
        <a class="btn btn-primary" href="{{ path('auteur_index') }}">Retour</a>
    </div>
    {{ include('auteur/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    {{ include('auteur/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="card bg-dark mt-4">
        <div class="card-body">
            {{ form_start(form_increment) }}
                {{ form_widget(form_increment) }}
                <button class="btn btn-primary">{{ button_label|default('Incrémenter les notes') }}</button>
            {{ form_end(form_increment) }}
        </div>
    </div>
{% endblock %}
