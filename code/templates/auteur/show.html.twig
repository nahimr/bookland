{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>
    {% set nomPrenom = auteur.nomPrenom | split(' ') %}
    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ nomPrenom[1] }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ nomPrenom[0] }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ auteur.sexe }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ auteur.nationalite }}</td>
            </tr>
            <tr>
                <th>Livres</th>
                <td>
                    <ul class="list-group">
                        {% for livre in auteur.livres %}
                            <li class="list-group-item">
                                <a href="{{ path('livre_show', {'id': livre.id}) }}">{{ livre }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('auteur_index') }}">Retour vers la liste</a>

    <a class="btn btn-primary" href="{{ path('auteur_edit', {'id': auteur.id}) }}">Editer</a>

    {{ include('auteur/_delete_form.html.twig') }}
{% endblock %}
